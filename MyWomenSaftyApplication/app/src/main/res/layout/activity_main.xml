<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FC0AE"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:backgroundTint="#0089FA"
                    android:text="Setting" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameBox"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/layout_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonBox"
                android:layout_width="match_parent"
                android:layout_height="482dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="30px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="30px"
                android:background="@drawable/layout_bg2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/alertPolice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="50dp"
                    android:height="60dip"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="Alert Police" />

                <Button
                    android:id="@+id/alertGuardian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:height="60dip"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:text="Alert Guardian" />

                <TextView
                    android:id="@+id/curMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Press the following button to suppress Alerting Police"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/countdownTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Altering police in 60s. "
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:height="60dip"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:text="I'm OK" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="106dp" />

                <TextView
                    android:id="@+id/locTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Location"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/locMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="GPS info"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>